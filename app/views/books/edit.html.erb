<div class="container">
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurrd.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book',class: "btn btn-secondary" %>
  
<% end %>

<%= link_to 'Show',book_path(@book.id) %>
<%=link_to 'Back',books_path %>

</div>